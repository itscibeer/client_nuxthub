{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": ["@types/node", "nuxt", "nitropack", "@nuxthub/core"],
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": [
    "server",
    "app",
    "pages",
    "components",
    "plugins",
    "middleware",
    "nuxt.config.ts",
    "db",              // ✅ schema folder
    ".nuxt",           // ✅ Nuxt auto-generated types
    "types"            // ✅ custom types (ถ้ามี)
  ]
}
